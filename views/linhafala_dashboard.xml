<odoo>
    <record id="act_chamadas" model="ir.actions.act_window">
        <field name="name">Chamadas</field>
        <field name="res_model">linhafala.chamada</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="linhafala_odoo.chamadas_graph"/>
    </record>

    <record id="act_casos" model="ir.actions.act_window">
        <field name="name">Casos</field>
        <field name="res_model">linhafala.caso</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="linhafala_odoo.casos_graph"/>
    </record>

    <record id="act_assistence" model="ir.actions.act_window">
        <field name="name">Assistências</field>
        <field name="res_model">linhafala.chamada.assistance</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="linhafala_odoo.assistence_graph"/>
    </record>

    <record id="dashboard_form_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-2">
                    <column>
                        <action
                            string="Chamadas" 
                            name="%(linhafala_odoo.act_chamadas)d"/>
                    </column>
                    <column>
                        <action
                            string="Casos" 
                            name="%(linhafala_odoo.act_casos)d"/>
                    </column>
                    <column>
                        <action
                            string="Assistências" 
                            name="%(linhafala_odoo.act_assistence)d"/>
                    </column>    
                </board>
            </form> 
        </field>
    </record>

    <record id="linhafala_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="dashboard_form_view"/>

    </record>

</odoo>