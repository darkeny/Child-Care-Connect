<odoo>
    <data>
        <record id="my_model_popup_form" model="ir.ui.view">
            <field name="name">linhafala.popup_notify.popup.form</field>
            <field name="model">linhafala.popup_notify</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <p>
                                <strong>00.00.00</strong>
                            </p>
                            <br/>
                            <p>
                                <strong>Caller Number</strong>
                            </p>
                            <br/>

                            <p>
                                <strong>Connected Number</strong>
                            </p>
                        </group>
                        <!-- Add options to hide Save and Discard buttons -->
                        <footer>
                            <button name="action_save" states="draft" string="Save" class="btn-primary"/>
                            <button name="action_discard" states="draft" string="Discard" special="cancel"/>
                        </footer>
                    </sheet>
                    <footer>
                        <div>
                            <button id="btn-success" name="action_atender" string="Atender"
                                class="btn-success me-3"
                                type="object"/>
                            <button id="btn-shutdown" name="action_desligar" string="Cancelar"
                                class="btn-danger me-3"
                                type="object"/>                           
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="my_model_action" model="ir.actions.act_window">
            <field name="name">Receiving Call...</field>
            <field name="res_model">linhafala.popup_notify</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="my_model_popup_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
