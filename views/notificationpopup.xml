<odoo>
    <data>
        <record id="my_model_popup_form" model="ir.ui.view">
            <field name="name">linhafala.asterisk.popup.form</field>
            <field name="model">linhafala.asterisk</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="float-end">
                            <strong><field name="time" /></strong>
                        </div>
                        <div class="popup-content">
                            <p><strong>Número do emissor: <field name="callerIDNum" /></strong></p>
                            <p><strong>Número do receptor: <field name="connectedLineNum" /></strong></p>
                        </div>
                    </sheet>
                    <footer>
                        <div>
                            <button id="btn-success" name="action_atender" string="Atender"
                                class="btn-success me-3"
                                type="object" />
                            <button id="btn-shutdown" name="action_desligar" string="Cancelar"
                                class="btn-danger me-3"
                                type="object" />
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="my_model_action" model="ir.actions.act_window">
            <field name="name">Receiving Call...</field>
            <field name="res_model">linhafala.asterisk</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="my_model_popup_form" />
            <field name="target">new</field>
        </record>
    </data>
</odoo>