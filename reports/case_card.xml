<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_case">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-12">
                            <h1 class="text-center">Ficha de Caso</h1>
                        </div>
                    </div>
                    <br />
                    <br />
                    <h3>Dados do Caso</h3>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Categoria do Caso</th>
                                <th>Sub Categoria do Caso</th>
                                <th>Classificação Provisoria</th>
                                <th>Criado Por</th>
                                <th>Local de Ocorrência do incidente</th>
                                <th>Tratamento do Caso</th>
                                <th>Periodo de Resolução</th>
                                <th>Data de Ocorrência</th>
                                <th>Data de Criação</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td>
                                        <t t-esc="doc.case_type" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.secundary_case_type" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.case_type_classification" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.created_by" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.place_occurrence"/>
                                    </td>
                                    <td>
                                        <t t-esc="doc.resolution_type" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.case_priority" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.data_ocorrencia" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.created_at" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br />
                    <h3>Pessoas Envolvidas</h3>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Nome</th>
                                <th>Categoria</th>
                                <th>Provincia</th>
                                <th>Gênero</th>
                            </tr>
                        </thead>
                        <tbody>

                            <t t-foreach="doc.person_id" t-as="line">
                                <tr>
                                    <td>
                                        <t t-out="line.fullname" />
                                    </td>
                                    <td>
                                        <t t-out="line.person_type" />
                                    </td>
                                    <td>
                                        <t t-out="line.provincia" />
                                    </td>
                                    <td>
                                        <t t-out="line.gender" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <h3>Encaminhamentos</h3>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Entidade</th>
                                <th>Pessoa de contacto</th>
                                <th>Area de Referencia</th>
                                <th>Estado do caso</th>
                                <!--<th>Sexo</th>
                                <th>Relação &lt;=&gt; Vitima</th>-->
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="doc">
                                <tr>
                                    <td>
                                        <t t-esc="doc.ref_id.reference_area" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.forwarding_institution_line_ids.case_reference" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.ref_id.reference_area" />
                                    </td>
                                    <td>
                                        <t t-esc="doc.case_status" />
                                    </td>
                                    <!--<td>
